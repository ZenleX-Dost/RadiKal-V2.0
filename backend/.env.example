# Environment Configuration Template
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false

# Model Configuration
MODEL_PATH=models/checkpoints/best_model.pth
DEVICE=cuda  # or cpu
NUM_CLASSES=2
IMAGE_SIZE=512

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=xai-quality-control

# DVC Configuration
DVC_REMOTE=local
DVC_CACHE_DIR=.dvc/cache

# Authentication (Makerkit Integration)
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
MAKERKIT_API_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Export Configuration
EXPORT_DIR=exports
EXPORT_RETENTION_DAYS=7

# Training Configuration
BATCH_SIZE=8
NUM_EPOCHS=50
LEARNING_RATE=0.0001
MIXED_PRECISION=true
GRADIENT_ACCUMULATION_STEPS=1

# Inference Configuration
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.3
MAX_DETECTIONS_PER_IMAGE=100

# XAI Configuration
XAI_BACKGROUND_SAMPLES=50
MC_DROPOUT_SAMPLES=10
CALIBRATION_BINS=10

# Database (Optional - for future implementation)
# DATABASE_URL=postgresql://user:password@localhost:5432/radikal
# REDIS_URL=redis://localhost:6379/0

# Monitoring (Optional - for future implementation)
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_PORT=9090
